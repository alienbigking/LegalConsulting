<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--主页面dialog-->
    <style name="progress_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">@null</item>
        <!--背景颜色及和透明程度-->
        <item name="android:windowBackground">@color/catalog_text</item>
        <!--是否去除标题 -->
        <item name="android:windowNoTitle">true</item>
        <!--是否去除边框-->
        <!--<item name="android:windowFrame">@null</item>-->
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否模糊-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="view_shouyi_text">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">10sp</item>
        <item name="android:text">10-25</item>
        <item name="android:textColor">#54565a</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="view_user_line">
        <item name="android:layout_marginEnd">22dp</item>
        <item name="android:layout_marginStart">22dp</item>
        <item name="android:background">@color/view_line_user</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>
    <style name="view_order_line">
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:background">@color/view_line_user</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="view_setting_line">
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:background">@color/view_setting_user</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="view_qualification_authentication_line">
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:background">@color/view_line_user</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>


    <style name="choose_majors_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:background">#EAEBEE</item>
    </style>


    <style name="choose_majors_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:textColor">#ff666666</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="choose_majors_image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:visibility">gone</item>
    </style>
   <style name="choose_majors_bg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/selector_item_white_to_gary</item>
        <item name="android:onClick">onClickChooseMajors</item>
    </style>

    <style name="s_true" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#33da33</item>
    </style>

    <style name="s_false" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#9b9b9b</item>
    </style>


</resources>
