<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>

    <ImageView
        android:id="@+id/iv_idea_submit_back"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="17dp"
        android:onClick="onClickIdeaSubmit"
        android:padding="5dp"
        android:src="@mipmap/ic_back_gary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
    />

    <TextView
        android:id="@+id/tv_idea_submit_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="32dp"
        android:text="意见反馈"
        android:textColor="#ff333333"
        android:textSize="27sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_idea_submit_back"
    />

    <EditText
        android:id="@+id/et_idea_submit_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="19dp"
        android:background="@null"
        android:hint="请输入标题"
        android:maxLength="100"
        android:textColor="#ff999999"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_idea_submit_title"
    />
    <View android:id="@+id/v_idea_submit_title"
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_marginEnd="16dp"
          android:layout_marginStart="15dp"
          android:layout_marginTop="15dp"
          android:background="#FFE5E5E5"
          app:layout_constraintTop_toBottomOf="@+id/et_idea_submit_title"/>

    <EditText
        android:id="@+id/et_idea_submit_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="19dp"
        android:background="@null"
        android:gravity="top"
        android:hint="请输入您的投诉意见，我们将不断为您改进。"
        android:lines="12"
        android:textColor="#ff999999"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/v_idea_submit_title"
    />


    <TextView
        android:id="@+id/tv_idea_submit_send"
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/shape_idea_submit_send_bg"
        android:gravity="center"
        android:onClick="onClickIdeaSubmit"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


</android.support.constraint.ConstraintLayout>