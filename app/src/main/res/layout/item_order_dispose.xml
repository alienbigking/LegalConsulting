<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/selector_item_shape_order"
    android:layout_height="wrap_content"
>

    <ImageView
        android:id="@+id/iv_order_dispose_item"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginBottom="17dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="11dp"
        android:src="@mipmap/ic_user_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
    />

    <TextView
        android:id="@+id/tv_order_dispose_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="--"
        android:textColor="#ff333333"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/iv_order_dispose_item"
        app:layout_constraintTop_toTopOf="@id/iv_order_dispose_item"
    />

    <TextView
        android:id="@+id/tv_main_top_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¥--.--"
        android:textColor="#FFF34800"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_order_dispose_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_order_dispose_state"
        app:layout_constraintTop_toTopOf="@id/tv_order_dispose_name"
    />


    <TextView
        android:id="@+id/tv_order_dispose_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="2018-08-10 11:15"
        android:layout_marginTop="6dp"
        android:textColor="#ff999999"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@id/iv_order_dispose_item"
        app:layout_constraintTop_toBottomOf="@+id/tv_order_dispose_name"/>

    <TextView
        android:id="@+id/v_item_order_receiving_type"
        android:layout_width="57dp"
        android:layout_height="20dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/shape_order_type_bg"
        android:gravity="center"
        android:text="一 一"
        android:textColor="#ffff6600"
        android:textSize="11sp"
        app:layout_constraintStart_toEndOf="@id/iv_order_dispose_item"
        app:layout_constraintTop_toBottomOf="@id/tv_order_dispose_time"
    />

    <ImageView
        android:id="@+id/iv_order_dispose_state"
        android:layout_width="59dp"
        android:layout_height="47dp"
        android:src="@mipmap/ic_assign"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
    />


    <TextView
        android:id="@+id/tv_order_dispose_open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:gravity="end"
        android:text="详细内容"
        android:textColor="#ff5159a2"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/v_item_order_receiving_type"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/v_item_order_receiving_type"/>


    <TextView
        android:id="@+id/tv_tv_order_next"
        android:layout_width="68dp"
        android:layout_height="24dp"
        android:visibility="gone"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="14dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_order_bg"
        android:clickable="true"
        android:gravity="center"
        android:text="立即沟通"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
    />

</android.support.constraint.ConstraintLayout>

